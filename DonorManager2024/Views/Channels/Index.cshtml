@model IEnumerable<DonorManager2024.Models.Channels>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Channels List</h1>
<br />

<p>
    <a asp-action="Create">Create New</a><br />
</p>
<form asp-controller="Channels" asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find your Channel by <br />
            ID: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            Channel Code: <input type="text" name="channelCode" value="@ViewData["CurrentFilterChannelCode"]" />
            Channel Desc: <input type="text" name="channelDesc" value="@ViewData["CurrentFilterChannelDesc"]" /><br />
            <input type="submit" value="Search" class="btn btn-default" />
            <a asp-action="Index" class="btn btn-default">Remove Filter</a>
        </p>
    </div>
</form>
<table class="table table-striped border">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CodeSort">@Html.DisplayNameFor(model => model.ChannelCode)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChannelDesc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChannelCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChannelDesc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChannelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChannelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChannelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
